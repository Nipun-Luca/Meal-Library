<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_food_wallpaper"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meals to DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595">
    </Button>

    <Button
        android:id="@+id/searchByIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Meals by Ingredient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691">
    </Button>

    <Button
        android:id="@+id/searchMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Meals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795">
    </Button>

    <Button
        android:id="@+id/fromWebService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal from Web Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        android:backgroundTint="@color/material_dynamic_primary70">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>